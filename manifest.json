{
  "display_information": {
    "name": "Slack Transcription App",
    "description": "An app to provide transcription services in Slack.",
    "background_color": "#4A154B"
  },
  "features": {
    "bot_user": {
      "display_name": "TranscriptionBot",
      "always_online": true
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "commands",
        "chat:write",
        "chat:write.public",
        "files:write",
        "files:read",
        "channels:read",
        "groups:read",
        "im:read",
        "mpim:read",
        "reactions:read",
        "users:read"
      ]
    }
  },
  "settings": {
    "org_deploy_enabled": false,
    "socket_mode_enabled": true,
    "token_rotation_enabled": true
  }
}
